{
  "compilerOptions": {
    // Specifies the target JavaScript version for compiled code.
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    // Enables a broad range of strict type checking behavior, which helps catch errors early.
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["node"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Sets up path aliases for easier imports.
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // Specifies the files to include in the compilation.
  "include": [
    "next-env.d.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "lib/types.ts",
    ".next/types/**/*.ts"
  ],
  // Specifies the files and folders to exclude from the compilation.
  "exclude": ["node_modules", "tests", "server"]
}
